<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <TextView
        android:id="@+id/txtCaption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/starting_caption"
        android:textSize="24sp"
        android:textColor="#1E1E1E"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/etLuaScript" />

    <Button
        android:id="@+id/btnRunScript"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/run_button"
        android:text="@string/run_script_text"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/etLuaScript" />

    <EditText
        android:id="@+id/etLuaScript"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:singleLine="true"
        android:inputType="textMultiLine"
        android:gravity="top|start"
        android:padding="8dp"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:background="#1E1E1E"
        android:fontFamily="monospace"
        android:textColorHint="#CCCCCC"
        android:hint="@string/lua_code_hint"
        app:layout_constraintTop_toBottomOf="@+id/txtCaption"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnClear" />

    <Button
        android:id="@+id/btnClear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/clear_text"
        android:background="#F44336"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>